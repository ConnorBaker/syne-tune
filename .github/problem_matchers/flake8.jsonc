// https://gredowski.com/blogging/2021/02/21/linting-whole-project-in-vscode.html
{
  "problemMatcher": [
    {
      "owner": "flake8",
      "severity": "error",
      "pattern": [
        {
          "regexp": "^([\\w/.]+):(\\d+):(\\d+): (\\w\\d+) (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      ]
    }
  ]
}